<ul class="list">
  <li class="title">Artist Name</li>
<% @artists.each do |artist| %>
  <li>
  <%= link_to artist.name, {:action => 'artist', :id => artist.id}, {:class => 'row', 'data-pjax' => '#main' } %>
  </li>
<% end %>
</ul>

<% if @doajaxload %>
<script>
function load_artists(page)
{
  var success = function(data, stat, jqxhr)
  {
    var ii = data.length;
    for (var i = 0; i < ii; i++)
    {
      $('ul.list').append(
        $('<li />').append(
          $('<a />', {
              'href':'/artist/'+data[i].artist.id,
              'class': 'row',
              'data-pjax':'#main',
              text:data[i].artist.name
          })
        )
      );
    }

    if (jqxhr.status === 204)
    {
      return;
    }

    load_artists(page+1);
  };

  var request = $.ajax({
    url: '/artists/'+page+'.json',
    async: true,
    type: 'GET',
    success: success
  });

  $('a[data-pjax]').bind('click', function() {
    request.abort();
  });
}

load_artists(1);
</script>
<% end %>
